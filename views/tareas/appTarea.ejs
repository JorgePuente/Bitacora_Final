<html lang="en" ng-app="appTareas">
  <head>
    <link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/angular_material/0.8.3/angular-material.min.css">
    <link rel="stylesheet" href="stylesheets/tareas/styles.css">
    
  </head>
  <body layout="row">
    <md-sidenav layout="column" class="md-sidenav-left md-whiteframe-z2" md-component-id="left" md-is-locked-open="$mdMedia('gt-md')">
      <md-toolbar class="md-tall md-hue-2">
        <span flex></span>
        <div layout="column" class="md-toolbar-tools-bottom inset">
          <project-thumb></project-thumb>
          <span></span>
          <div><%= user.username %></div>
          <div><%= user.correo_electronico %></div>
        </div>
      </md-toolbar>
      <md-list>

        <a href="#/proyectos">
          <md-item-content md-ink-ripple layout="row" layout-align="start center" class="side_menu">
            <div class="inset">
              <ng-md-icon icon="dashboard"></ng-md-icon>
            </div>
            <div class="inset">Proyectos
            </div>
          </md-item-content>
        </a>

        <a href="#/tareas">
          <md-item-content md-ink-ripple layout="row" layout-align="start center" class="side_menu">
            <div class="inset">
              <ng-md-icon icon="assignment"></ng-md-icon>
            </div>
            <div class="inset">Tareas
            </div>
          </md-item-content>
        </a>

        <a>
          <md-item-content md-ink-ripple layout="row" layout-align="start center" class="side_menu">
            <div class="inset">
              <ng-md-icon icon="assignment_ind"></ng-md-icon>
            </div>
            <div class="inset">Asignadas a mi
            </div>
          </md-item-content>
        </a>

      <md-divider></md-divider>
      <md-subheader>Management</md-subheader>
      <md-item ng-repeat="item in admin">
        <a>
          <md-item-content md-ink-ripple layout="row" layout-align="start center">
            <div class="inset">
              <ng-md-icon icon="{{item.icon}}"></ng-md-icon>
            </div>
            <div class="inset">{{item.title}}
            </div>
          </md-item-content>
        </a>
      </md-item>
    </md-list>
    </md-sidenav>
      <div layout="column" class="relative" layout-fill role="main">
        <md-content flex md-scroll-y>
        <ui-view></ui-view>
         </md-content>
      </div>
    <!-- Angular Material Dependencies -->
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.6/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.6/angular-animate.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.5/angular-aria.min.js"></script>

    <script src="http://ajax.googleapis.com/ajax/libs/angular_material/0.8.3/angular-material.min.js"></script>
    
    <script src="http://cdn.jsdelivr.net/angular-material-icons/0.4.0/angular-material-icons.min.js"></script> 
    <script src="https://code.angularjs.org/1.0.8/i18n/angular-locale_es-mx.js"></script>

    <script src="javascripts/tareas/appTarea.js"></script>
  </body>
</html>