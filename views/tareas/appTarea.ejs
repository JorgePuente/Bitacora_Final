<html lang="en" ng-app="appTareas">
  <head>
    <link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/angular_material/0.11.0/angular-material.min.css">
    <link rel="stylesheet" href="stylesheets/tareas/styles.css">
  </head>
  <body layout="row">
    <md-sidenav layout="column" class="md-sidenav-left md-whiteframe-z2" md-component-id="left" md-is-locked-open="$mdMedia('gt-md')">
      <md-toolbar class="md-hue-2">
        <span flex></span>
        <div layout="row" layout-align="start center">
          <principal-thumb></project-thumb>
          <span flex></span>
        </div>
        <span flex></span>
        <div class="md-body-2"><b><%= user.username %></b></div>
        <div class="md-body-1"><%= user.correo_electronico %></div>
      </md-toolbar>
      <md-list class="menu_prin">
        
        <a href="#/proyectos">
          <md-list-item class="md-2-line" role="link" md-ink-ripple>

            <md-item-content md-ink-ripple layout="row" layout-align="start center" class="side_menu">
              <div class="inset">
                <ng-md-icon icon="dashboard"></ng-md-icon>
              </div>
              <div class="inset"><b>Proyectos</b>
              </div>
            </md-item-content>
          </md-list-item>
        </a>

        <a href="#/tareas">
          <md-list-item class="md-2-line" role="link" md-ink-ripple>

            <md-item-content md-ink-ripple layout="row" layout-align="start center" class="side_menu">
              <div class="inset">
                <ng-md-icon icon="assignment"></ng-md-icon>
              </div>
              <div class="inset"><b>Tareas</b>
              </div>
            </md-item-content>

          </md-list-item>
        </a>

        <a>
          <md-list-item class="md-2-line" role="link" md-ink-ripple>

            <md-item-content md-ink-ripple layout="row" layout-align="start center" class="side_menu">
              <div class="inset">
                <ng-md-icon icon="assignment_ind"></ng-md-icon>
              </div>
              <div class="inset"><b>Asignadas a mi</b>
              </div>
            </md-item-content>
          </md-list-item>
        </a>

        <md-divider></md-divider>
        <!--<md-subheader  class="md-no-sticky">Management</md-subheader>-->
        <md-list-item class="md-2-line" ng-repeat="item in admin" role="link" md-ink-ripple>
          <md-icon md-svg-icon="{{item.icon}}" aria-label="{{item.title}}"></md-icon>
          <div class="md-list-item-text">
            <span class="md-body-2">{{item.title}}</span>
          </div>
        </md-list-item>
      </md-list>
    </md-sidenav>
    <div layout="column" class="relative" layout-fill role="main">
      <md-content flex md-scroll-y>
        <ui-view></ui-view>
      </md-content>
    </div>
    <!-- Angular Material Dependencies -->
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-animate.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-aria.js"></script>
    <!-- Angular Material -->
    <script src="http://ajax.googleapis.com/ajax/libs/angular_material/0.11.0/angular-material.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.min.js"></script>
    <script src="http://cdn.jsdelivr.net/angular-material-icons/0.4.0/angular-material-icons.min.js"></script> 
    <script src="javascripts/tareas/appTarea.js"></script>

  </body>
</html>